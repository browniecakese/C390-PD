<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/style.css">
  <title>Kaera's Portfolio</title>
</head>

<body>
    <div>
      <nav class="navbar navbar-expand">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">
            <img src="/logo.png" >
          </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse justify-content-end" id="collapsibleNavbar">
            <ul class="navbar-nav">
                <li class="nav-item">
                  <a class="nav-link" href="/home">Home</a>
                </li> 
                <li class="nav-item">
                  <a class="nav-link" href="/portfolio">Portfolio</a>
                </li> 
                <li class="nav-item">
                  <a class="nav-link" href="/about">About</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/contact">Contact</a>
                </li>
              </ul>
            </div>
        </div>
      </nav>
    </div>
    <br>

    <!-- Main Portfolio Container -->
    <div class="rounded-container">
      <div style="text-align: center;">
        <h1>Portfolio</h1>
      </div>

      <!-- Category Selection Icons -->
      <div class="category-icons">
        <div class="category-button-wrapper">
          <button class="category-icon" onclick="scrollToCategory('category1')" aria-label="Category 1"></button>
          <span class="category-label">Design</span>
          <p>Where I explore topics like Digital Art, UX/Frontend design and Digital Asset Creation!</p>
        </div>
        <div class="category-button-wrapper">
          <button class="category-icon" onclick="scrollToCategory('category2')" aria-label="Category 2"></button>
          <span class="category-label">Development</span>
          <p>Where I explore topics like App Profiling, AI Development, App Development and Immersive Technologies!</p>
        </div>
      </div>

      <!-- Category 1 -->
      <div id="category1" class="category-section">
        <div class="category-divider"></div>
        <h2 class="category-title">Design</h2>
        <div class="carousel-container">
          <button class="carousel-nav prev" onclick="slideCarousel('carousel1', -1)">‹</button>
          <div id="carousel1" class="carousel">
            <div class="portfolio-item" onclick="navigateToWork('work1')">
              <div class="slides" style="background-image: url('/images/cat1_work1.jpg');"></div>
              <span class="carousel-item-title">3x3 Grid</span>
            </div>
            <div class="portfolio-item" onclick="navigateToWork('work2')">
              <div class="slides" style="background-image: url('/images/cat1_work2.png');"></div>
              <span class="carousel-item-title">Digital Banner</span>
            </div>
            <div class="portfolio-item" onclick="navigateToWork('work3')">
              <div class="slides" style="background-image: url('/images/project3.jpg');"></div>
              <span class="carousel-item-title">Project 3</span>
            </div>
          </div>
          <button class="carousel-nav next" onclick="slideCarousel('carousel1', 1)">›</button>
        </div>
      </div>

      <!-- Category 2 -->
      <div id="category2" class="category-section">
        <div class="category-divider"></div>
        <h2 class="category-title">Development</h2>
        <div class="carousel-container">
          <button class="carousel-nav prev" onclick="slideCarousel('carousel2', -1)">‹</button>
          <div id="carousel2" class="carousel">
            <div class="portfolio-item" onclick="navigateToWork('work4')">
              <div class="slides" style="background-image: url('/images/cat2_work1_ss1.jpg');"></div>
              <span class="carousel-item-title">Project 4</span>
            </div>
            <div class="portfolio-item" onclick="navigateToWork('work5')">
              <div class="slides" style="background-image: url('/images/project5.jpg');"></div>
              <span class="carousel-item-title">Project 5</span>
            </div>
          </div>
          <button class="carousel-nav next" onclick="slideCarousel('carousel2', 1)">›</button>
        </div>
      </div>
    </div>

    <script>
        // Smooth scroll to category
        function scrollToCategory(categoryId) {
            const element = document.getElementById(categoryId);
            element.scrollIntoView({ behavior: 'smooth', block: 'center' });
        }

        // Carousel sliding functionality
        const carouselStates = {
            carousel1: { currentIndex: 0 },
            carousel2: { currentIndex: 0 }
        };

        function slideCarousel(carouselId, direction) {
            const carousel = document.getElementById(carouselId);
            const items = carousel.querySelectorAll('.portfolio-item');
            
            if (items.length === 0) return;
            
            const state = carouselStates[carouselId];
            
            // Update current index
            state.currentIndex += direction;
            
            // Boundary checks
            if (state.currentIndex < 0) {
                state.currentIndex = 0;
            } else if (state.currentIndex >= items.length) {
                state.currentIndex = items.length - 1;
            }
            
            // Calculate and apply transform
            const slideAmount = carouselId === 'carousel1' ? 430 : 380; // 400px/350px item + 30px gap
            const translateValue = state.currentIndex * slideAmount;
            
            carousel.style.transform = `translateX(-${translateValue}px)`;
            
            console.log(`${carouselId}: Index ${state.currentIndex}, Translate: -${translateValue}px`);
        }

        // Navigate to work detail page
        function navigateToWork(workId) {
            window.location.href = `/work/${workId}`;
        }
    </script>
</body>
</html>