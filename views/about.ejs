  <script>
    let certCarouselIndex = 0;

    function slideCertCarousel(direction) {
      const carousel = document.getElementById('certificateCarousel');
      const items = carousel.querySelectorAll('.certificate-item-wrapper');
      
      if (items.length === 0) return;
      
      certCarouselIndex += direction;
      
      if (certCarouselIndex < 0) {
        certCarouselIndex = 0;
      } else if (certCarouselIndex >= items.length - 3) {
        certCarouselIndex = Math.max(0, items.length - 4);
      }
      
      const slideAmount = 230;
      const translateValue = certCarouselIndex * slideAmount;
      
      carousel.style.transform = `translateX(-${translateValue}px)`;
    }
  </script>
